{# Strip extra string quotes ("") that get added to the input strings #}
{# '"sophia-vllm-..."' --> 'sophia-vllm-...' #}
{% set endpoint_slug = endpoint_slug | trim('"') -%}
{% set reservation = reservation | trim('"') -%}

{# Import data #}
{% from '/home/openinference_svc/.globus_compute/sophia-inference-mep/configs.j2' import configs -%}
{% from '/home/openinference_svc/.globus_compute/sophia-inference-mep/macros.j2' import get_worker_init -%}

amqp_port: 443
display_name: {{ endpoint_slug }}
engine:
  type: GlobusComputeEngine
  max_retries_on_system_failure: {{ configs[endpoint_slug].max_retries_on_system_failure | default(2)}}
  max_workers_per_node: {{ configs[endpoint_slug].max_workers_per_node | default(100) }}
  job_status_kwargs:
    max_idletime: {{ configs[endpoint_slug].max_idletime | default(7200) }}
  address:
    type: address_by_interface
    ifname: ens10f0
  provider:
    type: PBSProProvider
    launcher:
      type: SimpleLauncher
    account: {{ configs[endpoint_slug].account | default("argonne_tpc") }}
    select_options: {{ configs[endpoint_slug].select_options | default("ngpus=8") }}
    scheduler_options: '#PBS -l filesystems=home:eagle'
    {% if reservation | length > 0 -%}
    queue: {{ reservation }}
    {% else -%}
    queue: {{ configs[endpoint_slug].queue | default("by-node") }}
    {% endif -%}
    init_blocks: 0
    max_blocks: {{ configs[endpoint_slug].max_blocks | default(1) }}
    min_blocks: 0
    nodes_per_block: {{ configs[endpoint_slug].nodes_per_block | default(1) }}
    walltime: 24:00:00 
    {{ get_worker_init(endpoint_slug) }}

allowed_functions:
{% for function_uuid in configs[endpoint_slug].allowed_functions | default(["not-a-uuid"]) -%}
  - {{ function_uuid }}
{% endfor %}